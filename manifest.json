{
  "manifest_version": 0.1,

  "name": "Easy Link Access",
  "description": "This extension allows user to save oft-used links to use in messages and documents",
  "version": "1.0",

  "icons": { "16": "imgs/icon16.png",
              "32": "imgs/icon32.png",
           "64": "imgs/icon64.png",
          "128": "imgs/icon128.png" },

  "browser_action": {
    "default_icon": "imgs/icon128.png",
    "default_popup": "popup.html",
    "default_title": "Easy access to common links"
  },

  // "content_scripts": [
  //   {
  //     "matches": ["http://www.google.com/*"],
  //     "css": ["style.css"]
  //     "js": ["jquery-3.1.1.min.js", "popup.js"]
  //   }
  // ],

  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "storage"
  ]
}